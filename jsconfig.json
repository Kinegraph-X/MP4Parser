{
  "compilerOptions": {
    "checkJs": true,              
    "maxNodeModuleJsDepth": 2,    
    "module": "commonjs",         
    "target": "es2020",           
    "moduleResolution": "node",
    "baseUrl": ".",               
    "paths": {                    
      "@/*": ["src/*"]
    },
    "strict": true,               
    "esModuleInterop": true,      
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",               
    "coverage"                    
  ],
  "include": [
    "dist/MP4ParserWorker.js"
  ]
}
